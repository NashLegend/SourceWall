<resources>

    <style name="AppTheme" parent="AppTheme_Basic_Day">
        <!--平台有差异的Style-->
        <item name="background_selectable_borderless">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppThemeNight" parent="AppTheme_Basic_Night">
        <!--平台有差异的Style-->
        <item name="background_selectable_borderless">?android:attr/selectableItemBackground</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ToolbarTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ToolbarStyleDay" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <style name="AppTheme_Basic_Day" parent="BaseTheme">
        <!--夜间模式不用设置toolbarStyle-->
        <item name="toolbarStyle">@style/ToolbarStyleDay</item>

        <!--Toolbar的颜色，其默认值为?android:attr/textColorPrimaryDisableOnly，因此修改textColorPrimaryDisableOnly也有同样效果-->
        <item name="actionMenuTextColor">@android:color/white</item>

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorPrimaryBright">@color/color_primary_bright</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:colorBackground">@color/page_background</item>
        <item name="color_page_background">@color/page_background</item>
        <item name="color_webview_background">@color/webview_background</item>
        <item name="cardBackgroundColor">@color/card_background</item>

        <!--作者名字颜色，同时还是日期、数量等的颜色，正文列表通用-->
        <item name="color_author_color">@color/author_color</item>
        <item name="color_author_dark_color">@color/author_dark_color</item>
        <item name="color_author_sub_color">@color/author_sub_color</item>

        <!--正文标题颜色-->
        <item name="color_article_title">@color/article_title</item>
        <!--正文内容字体颜色-->
        <item name="color_article_content_text">@color/article_content_text</item>
        <!--正文背景色-->
        <item name="color_article_text_background">@color/article_text_background</item>

        <!--列表样式-->
        <!--列表item的标题颜色-->
        <item name="color_list_title">@color/list_title</item>
        <!--列表item的简介颜色-->
        <item name="color_list_summary">@color/list_summary</item>
        <!--列表背景色-->
        <item name="color_list_background">@color/list_background</item>
        <!--列表背景色（按下）-->
        <item name="color_list_background_pressed">@color/list_background_pressed</item>

        <!--答案页面-->
        <!--AnswerActivity回答者背景-->
        <item name="color_answer_author_background">@color/answer_author_background</item>
        <!--AnswerActivity回答者字体-->
        <item name="color_answer_author_text">@color/answer_author_text</item>
        <item name="color_answer_author_sub_text">@color/answer_author_sub_text</item>
        <!--AnswerActivity问题背景色-->
        <item name="color_answer_question_title_background">
            @color/answer_question_title_background
        </item>
        <item name="color_answer_question_title_background_pressed">
            @color/answer_question_title_background_pressed
        </item>
        <!--AnswerActivity问题文字颜色-->
        <item name="color_answer_question_title_text">@color/answer_question_title_text</item>

        <!--回复页面-->
        <item name="color_reply_quote_background">@color/reply_quote_background</item>
        <item name="color_reply_quote_text">@color/reply_quote_text</item>
        <item name="color_reply_input_text">@color/reply_input_text</item>
        <item name="color_reply_hint">@color/reply_hint</item>
        <item name="color_reply_operation_bar_background">
            @color/reply_operation_bar_background
        </item>

        <!--对话框-->
        <item name="color_dialog_button_background">@color/dialog_button_background</item>
        <item name="drawable_dialog_button_text">@color/dialog_button_text_color</item>
        <item name="color_dialog_button_text">@color/dialog_button_text</item>
        <item name="color_dialog_button_text_pressed">@color/dialog_button_text_pressed</item>
        <item name="color_dialog_title">@color/dialog_title</item>
        <item name="color_dialog_list_text">@color/dialog_list_text</item>
        <item name="color_dialog_text">@color/dialog_text</item>

        <!--抽屉颜色-->
        <!--<item name="drawable_drawer_button_background">@drawable/bg_drawer_button</item>-->
        <item name="drawable_drawer_button_background">?android:attr/selectableItemBackground</item>
        <item name="color_drawer_button_background">@color/drawer_button_background</item>
        <item name="color_drawer_button_background_pressed">
            @color/drawer_button_background_pressed
        </item>
        <item name="color_drawer_button_text">@color/drawer_button_text</item>
        <item name="color_drawer_button_text_pressed">@color/drawer_button_text_pressed</item>
        <item name="color_drawer_author">@color/drawer_author</item>
        <item name="color_drawer_list_text">@color/drawer_list_text</item>
        <item name="color_drawer_list_sub_text">@color/drawer_list_sub_text</item>
        <item name="color_drawer_background">@color/drawer_background</item>

        <!--LListView-->
        <item name="color_llist_foot_head_text">@color/llist_foot_head_text</item>
        <item name="drawable_llist_header_button_background">@drawable/bg_header_button</item>
    </style>

    <!--MainActivity的主题-->
    <style name="BottomTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="DialogThemeNight" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:textColor">@color/dialog_text_night</item>
    </style>

    <style name="AlertDialogThemeNight" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme_Basic_Night" parent="BaseTheme">
        <item name="android:textColorPrimary">#eeeeee</item>
        <item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_light</item>
        <item name="android:textColorPrimaryDisableOnly">
            @color/abc_primary_text_disable_only_material_dark
        </item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_dark</item>
        <item name="android:textColorSecondaryInverse">@color/abc_secondary_text_material_light
        </item>
        <item name="android:textColorTertiary">@color/abc_secondary_text_material_dark</item>
        <item name="android:textColorTertiaryInverse">@color/abc_secondary_text_material_light
        </item>
        <item name="android:textColorHint">@color/hint_foreground_material_dark</item>
        <item name="android:textColorHintInverse">@color/hint_foreground_material_light</item>
        <item name="android:textColorHighlight">@color/highlighted_text_material_dark</item>
        <item name="android:textColorLink">@color/link_text_material_dark</item>

        <item name="android:colorForeground">@color/bright_foreground_material_dark</item>
        <item name="android:colorForegroundInverse">@color/bright_foreground_material_light</item>
        <item name="android:colorBackgroundCacheHint">
            @color/abc_background_cache_hint_selector_material_dark
        </item>
        <item name="isLightTheme">false</item>

        <!--提示框背景-->
        <item name="android:alertDialogTheme">@style/AlertDialogThemeNight</item>
        <!--对话框背景-->
        <item name="android:dialogTheme">@style/DialogThemeNight</item>
        <!--ProgressBar样式-->
        <item name="android:progressBarStyle">@style/Widget.AppCompat.ProgressBar</item>

        <!--上面几行只在Night设置-->
        <!--下面几行也在Day中一一对应-->

        <item name="colorPrimary">@color/color_primary_night</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_night</item>
        <item name="colorPrimaryBright">@color/color_primary_bright_night</item>
        <item name="colorAccent">@color/color_accent_night</item>
        <item name="android:colorBackground">@color/page_background_night</item>
        <item name="color_page_background">@color/page_background_night</item>
        <item name="color_webview_background">@color/webview_background_night</item>
        <item name="cardBackgroundColor">@color/card_background_night</item>

        <!--作者名字颜色，同时还是日期、数量等的颜色，正文列表通用-->
        <item name="color_author_color">@color/author_color_night</item>
        <item name="color_author_dark_color">@color/author_dark_color_night</item>
        <item name="color_author_sub_color">@color/author_sub_color_night</item>

        <!--正文标题颜色-->
        <item name="color_article_title">@color/article_title_night</item>
        <!--正文内容字体颜色-->
        <item name="color_article_content_text">@color/article_content_text_night</item>
        <!--正文背景色-->
        <item name="color_article_text_background">@color/article_text_background_night</item>

        <!--列表样式-->
        <!--列表item的标题颜色-->
        <item name="color_list_title">@color/list_title_night</item>
        <!--列表item的简介颜色-->
        <item name="color_list_summary">@color/list_summary_night</item>
        <!--列表背景色-->
        <item name="color_list_background">@color/list_background_night</item>
        <!--列表背景色（按下）-->
        <item name="color_list_background_pressed">@color/list_background_pressed_night</item>

        <!--答案页面-->
        <!--AnswerActivity回答者背景-->
        <item name="color_answer_author_background">@color/answer_author_background_night</item>
        <!--AnswerActivity回答者字体-->
        <item name="color_answer_author_text">@color/answer_author_text_night</item>
        <item name="color_answer_author_sub_text">@color/answer_author_sub_text_night</item>
        <!--AnswerActivity问题背景色-->
        <item name="color_answer_question_title_background">
            @color/answer_question_title_background_night
        </item>
        <item name="color_answer_question_title_background_pressed">
            @color/answer_question_title_background_pressed_night
        </item>
        <!--AnswerActivity问题文字颜色-->
        <item name="color_answer_question_title_text">@color/answer_question_title_text_night</item>

        <!--回复页面-->
        <item name="color_reply_quote_background">@color/reply_quote_background_night</item>
        <item name="color_reply_quote_text">@color/reply_quote_text_night</item>
        <item name="color_reply_input_text">@color/reply_input_text_night</item>
        <item name="color_reply_hint">@color/reply_hint_night</item>
        <item name="color_reply_operation_bar_background">
            @color/reply_operation_bar_background_night
        </item>

        <!--对话框-->
        <item name="color_dialog_button_background">@color/dialog_button_background_night</item>
        <item name="drawable_dialog_button_text">@color/dialog_button_text_color_night</item>
        <item name="color_dialog_button_text">@color/dialog_button_text_night</item>
        <item name="color_dialog_button_text_pressed">@color/dialog_button_text_pressed_night</item>
        <item name="color_dialog_title">@color/dialog_title_night</item>
        <item name="color_dialog_list_text">@color/dialog_list_text_night</item>
        <item name="color_dialog_text">@color/dialog_text_night</item>

        <!--抽屉颜色-->
        <!--<item name="drawable_drawer_button_background">@drawable/bg_drawer_button_night</item>-->
        <item name="drawable_drawer_button_background">?android:attr/selectableItemBackground</item>
        <item name="color_drawer_button_background">@color/drawer_button_background_night</item>
        <item name="color_drawer_button_background_pressed">
            @color/drawer_button_background_pressed_night
        </item>
        <item name="color_drawer_button_text">@color/drawer_button_text_night</item>
        <item name="color_drawer_button_text_pressed">@color/drawer_button_text_pressed_night</item>
        <item name="color_drawer_author">@color/drawer_author_night</item>
        <item name="color_drawer_list_text">@color/drawer_list_text_night</item>
        <item name="color_drawer_list_sub_text">@color/drawer_list_sub_text_night</item>
        <item name="color_drawer_background">@color/drawer_background_night</item>

        <!--LListView-->
        <item name="color_llist_foot_head_text">@color/llist_foot_head_text_night</item>
        <item name="drawable_llist_header_button_background">@drawable/bg_header_button_night</item>
    </style>

    <!--MainActivity的夜间主题-->
    <style name="BottomThemeNight" parent="AppThemeNight">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

</resources>
