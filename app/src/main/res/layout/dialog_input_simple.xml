<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/input_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:hint="@string/hint_input_image_url"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="?attr/color_reply_input_text"
        android:textColorHint="?attr/color_reply_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_dialog_input_cancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="?attr/color_dialog_button_background"
            android:text="@string/cancel"
            android:textColor="@drawable/dialog_button_text_color" />

        <Button
            android:id="@+id/button_dialog_input_ok"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="?attr/color_dialog_button_background"
            android:text="@string/ok"
            android:textColor="@drawable/dialog_button_text_color" />
    </LinearLayout>

</LinearLayout>